<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/login_back"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/user_title_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:text="@string/user_title"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <RelativeLayout
        android:id="@+id/user_hear_rela"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_below="@+id/user_title_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_hear_img"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo_icon"
            app:riv_border_color="@color/main_color"
            app:riv_border_width="@dimen/dp_3"
            app:riv_corner_radius="@dimen/dp_36" />
    </RelativeLayout>
    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_below="@+id/user_hear_rela"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_name_txt"
        android:background="@drawable/home_content_back"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/invite_code_rela"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:id="@+id/invitation_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/invitation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_21"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:text="@string/invitation_code"
                    android:textColor="@color/title_clolor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/next_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:id="@+id/invite_code_hint_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/next_img"
                    android:text="@string/invitation_hint"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:background="@color/gray_b2_30" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_password_rela"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/password_add" />

                <TextView
                    android:id="@+id/add_password_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_21"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:text="@string/add_password"
                    android:textColor="@color/title_clolor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:background="@color/gray_b2_30" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_collection_rela"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/my_collection" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_21"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:text="@string/my_collection"
                    android:textColor="@color/title_clolor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:background="@color/gray_b2_30" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delete_rela"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/recycle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_21"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:text="@string/recycle"
                    android:textColor="@color/title_clolor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/next_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:background="@color/gray_b2_30" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/data_rela"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/data_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_21"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:text="@string/data_statistics"
                    android:textColor="@color/title_clolor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/data_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_32"
                    android:background="@color/gray_b2_30" />
            </RelativeLayout>
            <TextView
                android:id="@+id/version_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_36"
                android:textColor="@color/gray_9f"
                tools:ignore="RtlHardcoded"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>