<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/treasures_content_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_132"
            android:layout_height="@dimen/dp_132"
            android:layout_marginStart="@dimen/sp_15"
            android:layout_marginTop="@dimen/sp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/sp_15">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/treasures_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/gray_ed"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/dp_4" />

            <TextView
                android:id="@+id/notImgTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/not_add_img"
                android:textColor="@color/gray_93"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />

            <TextView
                android:id="@+id/img_count_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/home_image_count_back"
                android:paddingStart="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_3"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/treasures_name_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="藏品名称"
                android:textColor="@color/title_clolor"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/treasures_desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="博物馆的藏品有着特殊的含义，不是任何实物都能成为博物馆的藏品，
            它必须具有历史的或艺术的或科学的价值，才能成为博物馆的藏品。"
                android:textColor="@color/gray_93"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/keywords1_txt"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/treasures_keywords_back"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="关键词"
                    android:textColor="@color/gray_93"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/keywords2_txt"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/treasures_keywords_back"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="关键词"
                    android:textColor="@color/gray_93"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/keywords3_txt"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/treasures_keywords_back"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="关键词"
                    android:textColor="@color/gray_93"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22">

                <TextView
                    android:id="@+id/sale_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@drawable/treasures_type_back"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:text="@string/can_sale"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/category_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/sale_status_txt"
                    android:background="@drawable/treasures_type_back"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:text="@string/category_type_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <ImageView
                    android:id="@+id/collection_img"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/collection_un" />
            </RelativeLayout>

            <TextView
                android:id="@+id/add_time_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:orientation="horizontal"
                android:text="@string/add_time_heard"
                android:textColor="@color/gray_93"
                android:textSize="@dimen/sp_11" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/gray_b2_30" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/end_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:visibility="gone" />
</LinearLayout>